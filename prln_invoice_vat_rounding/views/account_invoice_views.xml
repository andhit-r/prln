<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="form_invoice_etax" model="ir.ui.view">
            <field name="name">Form invoice etax addition</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='button_reset_taxes']" position="before">
                        <label string="" colspan="2"/>
                        <field name="amount_base"/>
                        <label string="" colspan="2"/>
                        <field name="amount_discount"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="tree_invoice_etax" model="ir.ui.view">
            <field name="name">Invoice line etax addition</field>
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="account.view_invoice_line_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='quantity']" position="before">
                        <field name="price_unit_base"/>
                    </xpath>
                    <xpath expr="//field[@name='discount']" position="after">
                        <field name="discount_amount"/>
                        <field name="discount_amount_total"/>
                    </xpath>
                    <xpath expr="//field[@name='uos_id']" position="after">
                        <field name="price_subtotal_base"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>

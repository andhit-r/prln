<openerp>
    <data>

        <record id="form_prln_soVatRounding" model="ir.ui.view">
            <field name="name">Form Sale Order - VAT Rounding 1</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="pralon_sale_enhancements.form_saleEnhancement_saleOrder"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                        <field name="price_unit_base"/>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='product_uos']" position="after">
                        <field name="price_subtotal_base"/>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="after">
                        <field name="discount_amount"/>
                        <field name="discount_amount_total"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="form_prln_soVatRounding2" model="ir.ui.view">
            <field name="name">Form Sale Order - VAT Rounding 1</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='amount_untaxed']" position="before">
                        <field name="amount_base"/>
                        <field name="amount_discount"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
